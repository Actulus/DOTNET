<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp2"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiApp2">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Colors"
            ContentTemplate="{DataTemplate local:ColorPage}"
            Route="ColorPage" />

        <ShellContent
            Title="Slider1"
            ContentTemplate="{DataTemplate local:Page}"
            Route="Page"/>

        <ShellContent
            Title="Slider2"
            ContentTemplate="{DataTemplate local:SliderTransformPage}"
            Route="SliderTransformPage"/>
    </TabBar>

</Shell>
