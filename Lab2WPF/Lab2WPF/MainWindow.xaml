<Window x:Class="Lab2WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel>
        <Label 
            Content="ROTATION"
            FontWeight="Bold"
            FontSize="20"
            Margin="0, 0, 0, 30"
            VerticalAlignment="Center" 
            HorizontalAlignment="Center">
            <Label.RenderTransform>
                <RotateTransform Angle="{Binding Value, ElementName=slider}"/>
            </Label.RenderTransform>
        </Label>

        <Slider x:Name="slider" Maximum="360" VerticalAlignment="Center" Margin="20,0,20,0"/>

        <Label 
               Content="{Binding Value, StringFormat='The angle is {0:F0} degrees',
                ElementName=slider}"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
    </StackPanel>
</Window>
