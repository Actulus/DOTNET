<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.ImageLayoutPage"
             Title="ImageLayoutPage">
    <ScrollView>
        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
            <Image x:Name="currentImage" WidthRequest="200" HeightRequest="200"/>
            <VerticalStackLayout Spacing="10">
                <Button BackgroundColor="DarkOrange" Text="Back" Clicked="OnBackButtonClicked"  />
                <Button BackgroundColor="Aquamarine" Text="Next" Clicked="OnNextButtonClicked" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>