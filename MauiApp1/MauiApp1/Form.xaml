                <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="25">
                    <Label Text="Name" />
                    <Entry Placeholder="Enter your name" />
                </HorizontalStackLayout>
                <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="25">
                    <Label Text="Age"/>
                    <Entry Placeholder="Enter your age" />
                </HorizontalStackLayout>
                <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center"  Spacing="25">
                    <Label Text="City"/>
                    <Entry Placeholder="Enter your city" />
                </HorizontalStackLayout>
                <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center"  Spacing="25">
                    <Label Text="Email"/>
                    <Entry Placeholder="Enter your email" />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <VerticalStackLayout BackgroundColor="LightSkyBlue" Grid.Row="0" Grid.Column="1" Spacing="10">
                <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="25">
